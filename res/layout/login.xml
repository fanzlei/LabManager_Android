<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88a"
   >
    
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="50dp"  
            android:background="#100"     
            android:id="@+id/login_bar"
            android:text="用户登录"
            android:gravity="center"
            android:textColor="#eee"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:id="@+id/login_ll_name"
        android:layout_below="@id/login_bar">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:id="@+id/login_tv_name"
            android:textSize="20sp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:textSize="20sp"
            android:id="@+id/login_name"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/login_ll_pass"
        android:layout_below="@id/login_ll_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    密码："
            android:textSize="20sp" />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:password="true"
            android:textSize="20sp"
            android:id="@+id/login_pass"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/login_ll_pass">
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:onClick="login"/>
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginLeft="30dp"
            android:onClick="register"/>
    </LinearLayout>
</RelativeLayout>
