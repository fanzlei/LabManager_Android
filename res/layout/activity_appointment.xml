<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fanz.util.Appointment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff353fb8"
        android:text="我要预约"
        android:textSize="25sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实验室："
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实验室名称"
            android:id="@+id/appointment_labname"
            android:textSize="25sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期："
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"
            android:textSize="25sp"/>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:calendarViewShown="false"
            
            android:id="@+id/appointment_date"></DatePicker>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时段："
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"
            android:textSize="25sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appointment_interval"
            android:entries="@array/appointment_interval"></Spinner>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数："
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"
            android:textSize="25sp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appointment_number"
            android:entries="@array/appointment_number"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约人："
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/appoint_name"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机："
            android:layout_marginLeft="50dp"
            android:paddingTop="10dp"
            android:textSize="25sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="11"
            android:id="@+id/appoint_phone"/>
        </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="cancle"
        android:text="取消"/>
        <Button
        android:layout_width="100dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:onClick="make"
        android:text="确定"/>
    </LinearLayout>
    
</LinearLayout>
